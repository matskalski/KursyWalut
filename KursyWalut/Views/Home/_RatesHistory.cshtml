@model KursyWalut.ViewModels.RatesHistoryVM



<div style="text-align:center">
    <table class="table">
        <thead>
            <tr style="background-color:brown; color:white">
                <th>Data</th>
                <th>Kurs</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var rate in Model.rates)
            {
                <tr>
                    <td>
                        @rate.effectiveDate
                    </td>
                    <td>
                        @(rate.mid.ToString() + " PLN")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div style="float:left">
    @Html.ActionLink(
    "Pobierz do pliku xlsx",
      "ExportHistoryToExcel",
      "Home",
      new { id = Model.currencyId },
      new { @class = "btn btn-info" })


</div>

